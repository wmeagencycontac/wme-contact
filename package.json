{
  "name": "wme-agency-website",
  "version": "1.0.0",
  "description": "WME Agency Contact Website",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/styles/main.css -o public/styles/app.css",
    "build:js": "webpack --mode production",
    "watch": "concurrently \"npm run watch:css\" \"npm run watch:js\"",
    "watch:css": "postcss src/styles/main.css -o public/styles/app.css --watch",
    "watch:js": "webpack --mode development --watch"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "concurrently": "^8.2.2"
  },
  "keywords": ["wme", "agency", "contact", "entertainment"],
  "author": "WME Agency",
  "license": "MIT"
}
